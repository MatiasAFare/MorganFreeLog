<!DOCTYPE html>
<html>
  <head>
    <title>Listado de Items</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      /* Estilos espec√≠ficos para los filtros */
      .filters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        align-items: end;
      }

      .filter-field {
        display: flex;
        flex-direction: column;
      }

      .filter-field label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
        color: var(--text-primary);
        font-size: 14px;
      }

      .filter-field input,
      .filter-field select {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid var(--border-primary);
        border-radius: 4px;
        font-size: 14px;
        background-color: var(--bg-tertiary);
        color: var(--text-primary);
        transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
      }

      .filter-field input:focus,
      .filter-field select:focus {
        border-color: var(--border-focus);
        box-shadow: 0 0 0 2px rgba(88, 166, 255, 0.3);
        outline: none;
      }

      .filter-field input::placeholder {
        color: var(--text-muted);
      }

      /* Estilos para los indicadores de ordenaci√≥n */
      .sort-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        align-items: center;
        gap: 5px;
      }

      .sort-indicator {
        font-size: 12px;
        opacity: 0.7;
      }

      /* Estilos para modal nativo */
      .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
      }

      .modal-overlay:target {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .modal-content {
        background-color: var(--bg-primary);
        padding: 0;
        border-radius: 8px;
        max-width: 400px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      }

      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid var(--border-primary);
      }

      .modal-header h3 {
        margin: 0;
        color: var(--text-primary);
      }

      .close-modal {
        color: var(--text-secondary);
        font-size: 28px;
        font-weight: bold;
        text-decoration: none;
        line-height: 1;
      }

      .close-modal:hover {
        color: var(--text-primary);
      }

      .modal-body {
        padding: 20px;
      }

      .modal-body h4 {
        margin-top: 0;
        color: var(--text-primary);
      }

      .modal-body p {
        margin: 10px 0;
        color: var(--text-secondary);
      }

      .form-group {
        margin-bottom: 15px;
      }

      .form-group label {
        display: block;
        margin-bottom: 5px;
        color: var(--text-primary);
        font-weight: 500;
      }

      .form-group input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid var(--border-primary);
        border-radius: 4px;
        font-size: 14px;
        background-color: var(--bg-tertiary);
        color: var(--text-primary);
      }

      .modal-actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
      }

      .modal-actions .btn {
        flex: 1;
        text-align: center;
      }
      
      .header {
        text-align: center;
        margin-bottom: 30px;
      }
      
      .header h1 {
        margin: 0 0 20px 0;
        color: var(--text-primary, #333);
        font-size: 2.5em;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
      }
      
      .logo {
        width: 300px;
        height: 200px;
        object-fit: contain;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        padding: 10px;
        margin: 0 auto;
        display: block;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <h1>Listado de Items</h1>
        <img src="/morganshop.png" alt="MorganShop Logo" class="logo" />
      </div>

      <% if (error) { %>
      <div class="alert alert-danger auto-hide"><%= error %></div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success auto-hide"><%= success %></div>
      <% } %>

      <div class="actions">
        <a href="/shop/items-new" class="btn btn-primary">Nuevo Item</a>
        <a href="/" class="btn btn-secondary">Volver al Inicio</a>
        <a href="/shop" class="btn btn-secondary">Limpiar Filtros</a>
      </div>

      <!-- Filtros separados de la tabla -->
      <div class="filters-section">
        <h5>üîç Filtros de b√∫squeda</h5>
        <form id="filterForm" method="GET" action="/shop">
          <div class="filters-grid">
            <div class="filter-field">
              <label for="name">Nombre:</label>
              <input 
                type="text" 
                id="name"
                name="name" 
                placeholder="Buscar por nombre..." 
                value="<%= typeof name !== 'undefined' ? name : '' %>"
                onchange="submitFilters()"
              />
            </div>
            <div class="filter-field">
              <label for="price">Precio m√°ximo:</label>
              <input 
                type="number" 
                id="price"
                name="price" 
                placeholder="Ej: 100" 
                value="<%= typeof price !== 'undefined' ? price : '' %>"
                onchange="submitFilters()"
              />
            </div>
            <div class="filter-field">
              <label for="stock">Stock m√≠nimo:</label>
              <input 
                type="number" 
                id="stock"
                name="stock" 
                placeholder="Ej: 10" 
                value="<%= typeof stock !== 'undefined' ? stock : '' %>"
                onchange="submitFilters()"
              />
            </div>
            <div class="filter-field">
              <label for="category">Categor√≠a:</label>
              <select 
                id="category"
                name="category" 
                onchange="submitFilters()"
              >
                <option value="">Todas las categor√≠as</option>
                <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <%= typeof category !== 'undefined' && category === cat ? 'selected' : '' %>><%= cat %></option>
                <% }); %>
              </select>
            </div>
          </div>
        </form>
      </div>

      <!-- Tabla unificada -->
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>
              <a href="javascript:void(0)" onclick="sortBy('name')" class="sort-link">
                Nombre <span id="sort-name" class="sort-indicator">‚Üï</span>
              </a>
            </th>
            <th>
              <a href="javascript:void(0)" onclick="sortBy('price')" class="sort-link">
                Precio <span id="sort-price" class="sort-indicator">‚Üï</span>
              </a>
            </th>
            <th>
              <a href="javascript:void(0)" onclick="sortBy('stock')" class="sort-link">
                Stock <span id="sort-stock" class="sort-indicator">‚Üï</span>
              </a>
            </th>
            <th>Categor√≠a</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td>$<%= item.price %></td>
            <td><%= item.stock %></td>
            <td><%= item.category || 'Sin categor√≠a' %></td>
            <td class="actions">
              <a href="/shop/<%= item.id %>" class="btn btn-sm btn-info">Ver</a>
              <a href="/shop/<%= item.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
              <a href="#add-to-cart-<%= item.id %>" class="btn btn-sm btn-primary">
                üõí Agregar
              </a>
              <form
                action="/shop/<%= item.id %>/delete"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-sm btn-danger"
                  onclick="return confirm('¬øEst√° seguro que desea eliminar este item?')"
                >
                  Eliminar
                </button>
              </form>
            </td>
          </tr>
          <div id="add-to-cart-<%= item.id %>" class="modal-overlay">
            <div class="modal-content">
              <div class="modal-header">
                <h3>Agregar al Carrito</h3>
                <a href="#" class="close-modal">&times;</a>
              </div>
              <div class="modal-body">
                <h4><%= item.name %></h4>
                <p>Precio: $<%= item.price %></p>
                <p>Stock disponible: <%= item.stock %></p>
                
                <form action="/cart/" method="POST">
                  <input type="hidden" name="item_id" value="<%= item.id %>">
                  <div class="form-group">
                    <label for="quantity-<%= item.id %>">Cantidad:</label>
                    <input 
                      type="number" 
                      id="quantity-<%= item.id %>" 
                      name="quantity" 
                      value="1" 
                      min="1" 
                      max="<%= item.stock %>" 
                      required
                    >
                  </div>
                  <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                    <a href="#" class="btn btn-secondary">Cancelar</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
      
      <% if (items.length === 0) { %>
      <div class="card">
        <div class="card-body">
          <p style="text-align: center; margin: 0; color: var(--text-secondary);">
            üì¶ No hay items disponibles que coincidan con los filtros seleccionados.
          </p>
        </div>
      </div>
      <% } %>
    </div>

    <script>
      // Auto-submit del formulario cuando cambian los filtros
      function submitFilters() {
        document.getElementById('filterForm').submit();
      }

      // Funci√≥n para ordenar
      function sortBy(field) {
        const form = document.getElementById('filterForm');
        const urlParams = new URLSearchParams(window.location.search);
        const currentSort = urlParams.get('orderBy');
        const currentDirection = urlParams.get('sortDirection') || 'ASC';
        
        // Crear input hidden para orderBy si no existe
        let orderByInput = form.querySelector('input[name="orderBy"]');
        if (!orderByInput) {
          orderByInput = document.createElement('input');
          orderByInput.type = 'hidden';
          orderByInput.name = 'orderBy';
          form.appendChild(orderByInput);
        }
        
        // Crear input hidden para sortDirection si no existe
        let sortDirectionInput = form.querySelector('input[name="sortDirection"]');
        if (!sortDirectionInput) {
          sortDirectionInput = document.createElement('input');
          sortDirectionInput.type = 'hidden';
          sortDirectionInput.name = 'sortDirection';
          form.appendChild(sortDirectionInput);
        }
        
        // Determinar la nueva direcci√≥n
        let newDirection = 'ASC';
        if (currentSort === field && currentDirection === 'ASC') {
          newDirection = 'DESC';
        }
        
        orderByInput.value = field;
        sortDirectionInput.value = newDirection;
        
        // Actualizar indicadores visuales
        document.querySelectorAll('.sort-indicator').forEach(span => {
          span.textContent = '‚Üï';
        });
        document.getElementById('sort-' + field).textContent = newDirection === 'ASC' ? '‚Üë' : '‚Üì';
        
        form.submit();
      }

      // Mostrar indicador de ordenaci√≥n actual
      window.onload = function() {
        const urlParams = new URLSearchParams(window.location.search);
        const currentSort = urlParams.get('orderBy');
        const currentDirection = urlParams.get('sortDirection') || 'ASC';
        
        if (currentSort) {
          const sortIndicator = document.getElementById('sort-' + currentSort);
          if (sortIndicator) {
            sortIndicator.textContent = currentDirection === 'ASC' ? '‚Üë' : '‚Üì';
          }
        }
      };
    </script>
  </body>
</html>
