<!DOCTYPE html>
<html>

<head>
    <title>Lista de Permisos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <h1>Lista de Permisos</h1>

        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <div class="actions">
            <a href="/permisos/new" class="btn btn-primary">Nuevo Permiso</a>
            <a href="/" class="btn btn-secondary">Volver al Inicio</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% permisos.forEach(permiso => { %>
                <tr>
                    <td><%= permiso.nombre %></td>
                    <td><%= permiso.descripcion %></td>
                    <td>
                    <a href="/permisos/<%= permiso.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
                    <a href="/permisos/<%= permiso.id %>/delete" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        
    </div>
</body>

</html>