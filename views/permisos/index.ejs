<!DOCTYPE html>
<html>

<head>
    <title>Editar Rol</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <h1>Editar Rol</h1>

        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>

                <form action="/roles/<%= rol.id %>/edit" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" class="form-control" value="<%= rol.nombre %>"
                            required>
                    </div>

                    <!-- Sección de asignación de permisos con checkboxes -->
                    <div class="form-group">
                        <h3>Permisos Asignados</h3>
                        <div class="permisos-container">
                            <% allPermisos.forEach(permiso=> { %>
                                <div class="permiso-check">
                                    <input type="checkbox" id="permiso-<%= permiso.id %>" name="permisos"
                                        value="<%= permiso.id %>" <%=rolPermisosMap[permiso.id] ? 'checked' : '' %>>
                                    <label for="permiso-<%= permiso.id %>">
                                        <strong>
                                            <%= permiso.nombre %>
                                        </strong>
                                        <span class="text-muted">
                                            <%= permiso.descripcion %>
                                        </span>
                                    </label>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a href="/roles" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
    </div>
</body>

</html>